from sklearn import datasets                             #버지니카 꽃 데이터 준비
iris=datasets.load_iris()
list(iris.keys())
X=iris["data"][:,3:]
y=(iris["target"]==2).astype(np.int)

from sklearn.linear_model import LogisticRegression     #로지스틱 회귀 모델 훈련
log_reg=LogisticRegression()
log_reg.fit(X,y)

X_new=np.linspace(0,3,1000).reshape(-1,1)               #꽃잎의 너비가 0~3인 꽃모델의 추정 확률 계산
y_proba=log_reg.predict_proba(X_new)
plt.plot(X_new, y_proba[:,1],"-g",label="Iris v")
plt.plot(X_new, y_proba[:,0],"b--",label="not lris v")

